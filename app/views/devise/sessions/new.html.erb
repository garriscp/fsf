   <div id="container">
		<div id="logoBox" ><%= image_tag "sonic.png", :size => "65x75", :alt =>"Sonic Twitter"%></div>
		<div id="inputBox">
    
        <div class="loginForm">

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.email_field :email, :placeholder => "Email", :class => "input" %></div>

  <div><%= f.password_field :password, :placeholder => "Password", :class => "input" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  </div>
  <div><%= f.submit "Sign in", :class => "styled-button" %></div>
<% end %>

<div id="passwordLink"><%= link_to "Forgot Password?", new_password_path(resource_name) %></div>
        <%= link_to new_registration_path(resource_name), class: :"noUnderline" do %>
            <button id="registerButton" class="styled-button smaller-button">Register Here</button>
        <% end %>
</div></div>